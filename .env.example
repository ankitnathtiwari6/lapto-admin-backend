NODE_ENV=development
PORT=5000

# MongoDB
# For local development (no Docker)
MONGODB_URI=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/lapto
# For Docker development (uncomment when using docker-compose)
# MONGODB_URI=mongodb://admin:admin123@mongodb:27017/lapto?authSource=admin

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Lapto Admin Password (for creating companies and users without auth)
LAPTO_ADMIN_PASSWORD=12345

# CORS
CORS_ORIGIN=http://localhost:5173

# Google Gemini AI
GEMINI_API_KEY=your-gemini-api-key-here
